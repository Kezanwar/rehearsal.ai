{
  "name": "rehearsal-ai-api",
  "version": "1.0.0",
  "main": "api.ts",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "api:start": "node --env-file=.env --import=./node_modules/tsconfig-paths/register.js --import=tsx api.ts",
    "db:start": "docker compose up -d",
    "db:stop": "docker compose down",
    "db:exec": "docker exec -it rehearsal-api-postgres psql -U kez -d rehearsal",
    "db:migrate:generate": "drizzle-kit generate",
    "db:migrate:up": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "apple-signin-auth": "^2.0.0",
    "axios": "^1.13.4",
    "bcryptjs": "^3.0.3",
    "drizzle-orm": "^0.45.1",
    "fastify": "^5.7.2",
    "fastify-plugin": "^5.1.0",
    "jsonwebtoken": "^9.0.3",
    "pino-pretty": "^13.1.3",
    "postgres": "^3.4.8",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.1.0",
    "drizzle-kit": "^0.31.8",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.17.0"
  }
